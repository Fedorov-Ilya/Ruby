  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :class => 'my-form') do |f| %>
    <h2>Вход</h2>
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control",placeholder: "Email"%>
    </div>

    <div class="form-group">
      <%= f.password_field :password, autocomplete: "current-password" ,class:"form-control",placeholder: "Пароль"%>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :Запомнить? %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Вход",class:"btn" %>
    
    </div>
    <div> 
      <p class="link1">У вас ещё нет аккаунта? 
        <%= link_to 'Регистрация', new_user_registration_path, :method => :get%>
      </p>

      <p>Забыли пароль?
        <%= link_to 'Восстановить', new_user_password_path, :method => :get%>
      </p>
    </div>
  <% end %>
